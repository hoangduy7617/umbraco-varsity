@model dynamic

<div class="col-md-6">
    <figure class="mu-latest-course-img">
        <a href="#"><img alt="img" src="@Model.Image"></a>
        <figcaption class="mu-latest-course-imgcaption">
            <a href="#">Drawing</a>
            <span><i class="fa fa-clock-o"></i>@((int)Model.Duration * 7)Days</span>
        </figcaption>
    </figure>
    <div class="mu-latest-course-single-content">
        <h4><a href="@Model.Url">@Model.Name</a></h4>
        <p>@Html.Raw(Model.ShortDescription)</p>
        <div class="mu-latest-course-single-contbottom">
            <a href="#" class="mu-course-details">Details</a>
            <span href="#" class="mu-course-price">$165.00</span>
        </div>
    </div>
</div>