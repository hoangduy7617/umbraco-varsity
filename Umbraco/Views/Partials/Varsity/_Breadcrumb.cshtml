@inherits Umbraco.Web.Mvc.UmbracoViewPage

@{
    var allNodeRoot = Model.Ancestors().Reverse();
}

    
<!-- Page breadcrumb -->
<section id="mu-page-breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-page-breadcrumb-area">
                    <h2>@Model.Name</h2>
                    <ol class="breadcrumb">
                        @foreach (var content in allNodeRoot)
                        {
                            <li class=""><a href="@content.Url">@content.Name</a></li>
                        }
                        <li class="active">@Model.Name</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End breadcrumb -->
